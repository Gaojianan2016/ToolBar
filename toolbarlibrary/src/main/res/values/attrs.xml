<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="myToolBar">
        <attr name="leftViewId" format="reference" />
        <attr name="centerViewId" format="reference" />
        <attr name="rightViewId" format="reference" />
        <attr name="isPaddingTopBar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="title" format="string" />
        <attr name="leftImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
    </declare-styleable>
</resources>