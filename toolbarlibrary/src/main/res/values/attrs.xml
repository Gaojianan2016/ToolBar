<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="myToolBar">
        <attr name="leftViewId" format="reference" />
        <attr name="centerViewId" format="reference" />
        <attr name="rightViewId" format="reference" />
        <attr name="isPaddingTopBar" format="boolean" />
        <attr name="left_width" format="dimension" />
        <attr name="left_height" format="dimension" />
        <attr name="right_width" format="dimension" />
        <attr name="right_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="title" format="string" />
        <attr name="leftImage" format="reference" />
        <attr name="rightImage" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="leftTextColor" format="color" />
        <attr name="rightTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="left_paddingLeft" format="dimension" />
        <attr name="right_paddingRight" format="dimension" />
    </declare-styleable>
</resources>